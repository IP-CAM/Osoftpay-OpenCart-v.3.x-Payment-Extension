<form class="form-horizontal" method="post" action={{ gatewayurl }}>
    <input name="TransactionType" value="2" type="hidden" />
    <input name="MerchantNumber" value="{{ payment_osoftpay_mercid }}" type="hidden" />
    <input name="SiteRedirectURL" value="{{ redirecturl }}" type="hidden" />
    <input name="TransactionReference" value="{{ trans_ref }}" type="hidden" />
    <input name="CustomerName" value="{{ payer_name }}" type="hidden" />
    <input name="CustomerId" value="{{ payer_email }}" type="hidden" />
    <input name="PaymentItemName" value="{{ payment_osoftpay_paymentItemName }}" type="hidden" />
    <input name="Amount" value="{{ total }}" type="hidden" />
    <input name="Hash" value="{{ hash }}" type="hidden" />
    <div class="buttons">
        <div class="pull-right">
            <input type="submit" value="{{ button_confirm }}" id="button-confirm" data-loading-text="{{ text_loading }}" class="btn btn-primary" />
        </div>
    </div>
</form>